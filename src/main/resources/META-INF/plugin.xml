<idea-plugin>
    <id>com.linkkou.plugin.intellij.assistant</id>
    <name>TreeInfotip</name>
    <vendor email="chinacclk@gmail.com" url="https://github.com/Link-Kou/intellij-treeInfotip">linkkou</vendor>

    <!-- 插件版本 -->
    <version>2.0.0</version>
    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="201"/>
    <!-- 插件的描述 -->
    <description><![CDATA[
      <ul>
        <h3>English:</h3>
        <li>Add comment information to the project directory tree</li>
        <h3>中文：</h3>
        <li>项目目录树添加备注信息</li>
      </ul>
      <br/>
      <p><img src="https://raw.githubusercontent.com/Link-Kou/intellij-treeInfotip/master/image/2020-03-18_16-47-30.jpg" width="500" height="480" alt="screenshots-balloon.png"/></p>
      <p><img src="https://raw.githubusercontent.com/Link-Kou/intellij-treeInfotip/master/image/2020-03-18_16-46-20.gif" width="500" height="200" alt="screenshots-dialog.png"/></p>
      <p><img src="https://raw.githubusercontent.com/Link-Kou/intellij-treeInfotip/master/image/2021-06-08_16_40_11.png" width="534" height="543" alt="screenshots-dialog.png"/></p>
      <br/>
    ]]></description>

    <!-- 插件的功能 -->
    <change-notes><![CDATA[
      <ul>
        <p>2.0.0</p>
        <li>全面重构,添加右键菜单支持</li>
        <li>Fully refactored, adding right-click menu support</li>
      </ul>
    ]]></change-notes>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products-->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <postStartupActivity implementation="com.plugins.infotip.PluginStartupActivity"/>
        <treeStructureProvider implementation="com.plugins.infotip.TreeOnlyTextProvider"/>
        <projectViewNodeDecorator implementation="com.plugins.infotip.IgnoreViewNodeDecorator"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="FirstAction" class="com.plugins.infotip.ActionDescription" text="Add Description"
                icon="AllIcons.Actions.MenuPaste"
                description="添加备注信息">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="ReplaceInPath"/>
        </action>
    </actions>
</idea-plugin>